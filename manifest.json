{
    "name": "Troxal",
    "version": "0.5.0",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'sha256-aHRq/i/eRhhzzVeyfMfpcktn3WKLO+YAO38aT72m8PQ=' https://*.troxal.com; object-src 'self';",
    "background": {
        "scripts": [
            "data/js/jquery-3.6.0.min.js",
            "common.js"
        ]
    },
    "content_scripts": [
        {
            "js": [       
                "data/js/jquery-3.6.0.min.js",
                "log.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "description": "Manage your users throughout your organization.",
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>",
        "webNavigation",
        "history",
        "downloads",
        "management",
        "notifications",        
        "bookmarks",
        "geolocation",
        "identity", 
        "identity.email"
    ],
    "icons": {
        "16": "data/icons/16.png",
        "32": "data/icons/32.png",
        "48": "data/icons/48.png",
        "64": "data/icons/64.png",
        "128": "data/icons/128.png",
        "256": "data/icons/256.png"
    },
    "homepage_url": "https://troxal.com",
    "browser_action": {
        "default_icon": {
            "16": "/data/icons/16.png",
            "32": "/data/icons/32.png"
        },
        "default_popup": "action.html"
    }
}
